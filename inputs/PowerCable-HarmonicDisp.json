{
    "Actions": {
        "load data": true,
        "load simulation": false,
        "generate model": true,
        "run statics": true,
        "run modal": false,
        "run dynamics": true,
        "postprocess results": true,
        "plot results": true,
        "batch simulations": true
    },

    "File IO": {
        "input": {
            "dir": "D:/Guilherme_Martins/Orcaflex/Teste-Cabo/HarmonicDisp/",
            "Orcaflex data": "Cabo-vessel.yml"
        },
        "output": {
            "dir": "G:/Drives compartilhados/Projeto DWFOWT - Cabos/Orcaflex/"
        }
    },

    "Batch": {
        "vessel harmonic motion": {
            "combine dofs": false,
            "position": {
                "surge": { 
                    "amplitude": 1.0, "phase": 180.0,
                    "period": { "from": 1.0, "to": 40.0, "step": 0.5 }
                },
                "heave": { 
                    "amplitude": 1.0, "phase": 180.0,
                    "period": { "from": 1.0, "to": 40.0, "step": 0.5 } 
                }
            }
        }
    },  
    
    "Analysis": {
        "statics enabled" : true,
        "stage duration": [ 50.0, 50.0, 300.0 ],
        "statics": {
            "max iterations": 400,
            "tolerance": 1.0e-6,
            "damping": [1.0, 10.0]
        },
        "dynamics": {
            "method": "implicit", 
            "variable time step": false, 
            "time step": 0.1, 
            "max iterations": 100, 
            "tolerance": 25.0e-6, 
            "log precision": "Double", 
            "sample": 0.1 
        }
    },

    "PostProcessing": {
        "export format": { 
            "batch": ["excel", "csv"]
        },
        "period": { "stage": 3 },
        "lines": [
            { 
                "id": 1,
                "statics": {
                    "tension": "all nodes",
                    "position": {
                        "all nodes": ["X", "Z", "Declination"]
                    },
                    "other results": {
                        "Total mean axial strain": "all nodes"
                    }
                },
                "dynamics": {
                    "tension": "all nodes",
                    "position": {
                        "all nodes": ["X", "Z", "Declination"]
                    },
                    "other results": {
                        "Total mean axial strain": "all nodes",
                        "Dynamic Ry": "all nodes"
                    }
                }
            }
        ]
    },

    "Save options": {
        "Orcaflex data": false,
        "Orcaflex simulation": false,
        "results": true,
        "batch simulation": true,
        "batch data": true
    }
}